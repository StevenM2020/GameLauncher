<Page x:Class="GameLauncher.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameLauncher"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignUp">

    <Grid Background="#FF353535">
        <Canvas Margin="260,130,260,120" Background="DarkGray" RenderTransformOrigin="0.5,0.5" MinWidth="260" MinHeight="130" >
            <Label Content="Make a new account" Height="33" Width="125" Canvas.Left="80" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Name="btnSignUp" Content="Sign Up" Canvas.Left="44" Canvas.Top="118" Height="45" Width="192" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnSignUp_Click"/>
            <TextBox Name="txtUsername" TextWrapping="Wrap" Text="Username" Width="120" Canvas.Left="80" Canvas.Top="48" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox Name="txtPassword" TextWrapping="Wrap" Text="Password" Width="120" Canvas.Left="80" Canvas.Top="80" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>

    </Grid>
</Page>
